div.zoneViewer
    md-toolbar.md-theme-light-blue
      div(layout="horizontal" layout-padding)
        div(flex)
          h3 {{vm.zone.dnsName}}
          p {{ vm.zone.description }}
        div(layout="vertical" layout-padding)
          span Name: {{ vm.zone.name }}
          span Created: {{ vm.zone.creationTime | moment:'DD MMM, YYYY' }}
          div(layout="horizontal" layout-align="end center")
            span(ng-click="vm.editZone()").fa-stack.fa-sm
              i.fa.fa-square.fa-stack-2x.edit-icon
              i.fa.fa-pencil.fa-stack-1x
            span(ng-click="vm.deleteZone()").fa-stack.fa-sm
              i.fa.fa-square.fa-stack-2x.remove-icon
              i.fa.fa-trash.fa-stack-1x

    md-content
      record-list(records="vm.zone.records")
